<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:backgroundTint="@color/background_primary"
    app:cardCornerRadius="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginVertical="5dp"
        android:baselineAligned="false"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/requestCityToCity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Tarifa negocialble por 6 pasajeros" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/requestCityToCity_paymentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="#4B5465"
                android:paddingHorizontal="5dp"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                tools:text="Cash" />

            <TextView
                android:id="@+id/requestCityToCity_tripType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#775106"
                android:paddingHorizontal="5dp"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                tools:text="Viaje Privado" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/requestCityToCity_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                tools:text="vie 11 agosto," />

            <TextView
                android:id="@+id/requestCityToCity_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                tools:text="05:45" />

        </LinearLayout>

        <TextView
            android:id="@+id/requestCityToCity_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            tools:text="Parque Ciudad Blanca, Avenida Camilo Ponce, Ibarra, Ecuador" />

        <TextView
            android:id="@+id/requestCityToCity_destiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            tools:text="Ambato, Ecuador" />

        <TextView
            android:id="@+id/requestCityToCity_requestTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:textColor="@color/text_4"
            android:textSize="12sp"
            tools:text="Publicado hace 5 dias" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/requestCity_imageUser"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:importantForAccessibility="no"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/requestCityToCity_nameUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textColor="@color/text_primary"
                tools:text="Byron Alexander" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>